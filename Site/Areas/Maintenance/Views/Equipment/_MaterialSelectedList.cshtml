@model IEnumerable<Models.Maintenance.Equipment.MaterialModel>
<table class="table table-striped table-bordered table-hover nowrap">
    <thead class="thin-border-bottom">
        <tr>
            <th class="col-sm-1"></th>
            <th class="col-sm-4">@Resources.Resource.MId</th>
            <th class="col-sm-5">@Resources.Resource.MaterialName</th>
            <th class="col-sm-2">@Resources.Resource.Quantity</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="center">
                <div class="action-buttons">
                    <a class="red" href="#" onclick="DeleteMaterial('@item.MaterialId'); return false;" title="@Resources.Resource.Delete">
                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                    </a>
                </div>
            </td>
            <td>@item.MId</td>
            <td>@item.Name</td>
            <td><input type="text" class="input-mini Material" data-materialuniqueid="@item.MaterialId" value="@item.Quantity" /></td>
        </tr>
    }
</table>

