@model IEnumerable<Models.Maintenance.Material.MaterialSpecificationModel>
<table class="table table-bordered table-input" id="tableSpec">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-sm-1 center">
                    <div class="action-buttons">
                        <a class="red" href="#" onclick="DeleteSelected('@item.MaterialSpecificationId'); return false;" title="@Resources.Resource.Delete">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>
                </td>
                <th class="col-sm-1">@item.Name</th>
                <td class="col-sm-10">
                    <input type="hidden" class="Spec" value="@item.MaterialSpecificationId" data-isselect="@(item.MaterialSpecificationOptionModels.Count>0?"Y":"N")" />
                    @if (item.MaterialSpecificationOptionModels.Count > 0)
                    {
                        <select>
                            @foreach (var option in item.MaterialSpecificationOptionModels)
                            {
                                if (item.MaterialSpecificationOptionId == option.MaterialSpecificationOptionId)
                                {
                                    <option value="@option.MaterialSpecificationOptionId" selected="selected">@option.Name</option>
                                }
                                else
                                {
                                    <option value="@option.MaterialSpecificationOptionId">@option.Name</option>
                                }
                            }
                        </select>
                    }
                    else
                    {
                        <input type="text" class="col-sm-11" value="@item.Value" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

